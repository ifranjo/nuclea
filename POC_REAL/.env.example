# Public Supabase project URL used by client, middleware and server routes.
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321

# Public anonymous key used by browser auth/session flows.
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# Service role key used by admin/server-only operations.
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Shared secret for admin-only API endpoints (x-admin-key header).
ADMIN_API_SECRET=change_this_admin_secret

# Secret required by cron lifecycle route (x-cron-secret or Bearer token).
CRON_SECRET=change_this_cron_secret

# Canonical app origin used for absolute links in invitation/beta emails.
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Enables/disables beta gate middleware checks (true/false).
BETA_GATE_ENABLED=false

# Hours before expiry to notify trust contacts.
TRUST_CONTACT_NOTIFY_BEFORE_HOURS=72

# Deprecated alias kept for cross-track compatibility (PREREUNION_ANDREA still uses days-based naming).
# Prefer TRUST_CONTACT_NOTIFY_BEFORE_HOURS in new code.
TRUST_CONTACT_INACTIVITY_DAYS=

# Optional path override for local seed images used by scripts/seed.ts.
# Example: C:\Users\Kaos\scripts\nuclea\assets\seed-images
SEED_IMAGES_DIR=
