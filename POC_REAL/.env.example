# Supabase (local Docker — values from `npx supabase start`)
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=<anon-key-from-supabase-start>
SUPABASE_SERVICE_ROLE_KEY=<service-role-key-from-supabase-start>

# Admin API secret (required for /api/beta/* admin routes)
ADMIN_API_SECRET=<random-admin-secret>

# Beta gate (set to "true" to require beta_access for protected routes)
BETA_GATE_ENABLED=false

# App URL (used for building invitation links, share links, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Cron secret (lifecycle cron job authorization)
CRON_SECRET=<random-secret>

# Trust contact notification window before expiration (hours)
TRUST_CONTACT_NOTIFY_BEFORE_HOURS=24

# Email — Resend (https://resend.com)
# If not set, emails are logged to the console instead of being sent.
RESEND_API_KEY=
# Sender address (defaults to "NUCLEA <noreply@nuclea.app>" if not set)
EMAIL_FROM=NUCLEA <noreply@nuclea.app>
